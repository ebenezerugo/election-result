<main role="main" class="container">

  <div class="starter-template">
    <h1>Display Result</h1>
    <p class="lead">Display result for individual polling unit.</p>
  </div>

  <div class="row">
    <div class="container">
      <form>
          <div id="state" class="form-group">
              <label for="stateInputField"> State</label>
              <select class="form-control" id="stateInputField" onchange="onStateChange(this.value)">
                <option>Select</option>
              </select>
            </div>
      </form>
      <form>
        <div id="lga" class="form-group">
            <label for="lgaInputField"> Local Government Area</label>
            <select class="form-control" id="lgaInputField" onchange="onLgaChange(this.value)">
                <option>Select</option>
            </select>
          </div>
    </form>
    <form>
        <div id="ward" class="form-group">
            <label for="wardInputField"> Ward</label>
            <select class="form-control" id="wardInputField" onchange="onWardChange(this.value)">
                <option>Select</option>
            </select>
          </div>
    </form>
    <form>
        <div id="pollingUnit" class="form-group">
            <label for="pollingUnitInputField">Polling Unit</label>
            <select class="form-control" id="pollingUnitInputField" onchange="onPollingUnitChange(this.value)">
                <option>Select</option>
            </select>
          </div>
    </form>
    </div>
  </div>

  <!-- Result -->
<div id="result">
  <!-- Jumbotron -->
  <div class="jumbotron jumbotron-fluid">
    <div class="container">
      <h1 class="display-4">Name: <span id="polling_unit_name"></span></h1>
      <h3>Number: <span id="polling_unit_number"></span></h3>
      <p class="lead">Description: <span id="polling_unit_description"></span></p>

      <div class="row">
        <div class="col-sm">
          <strong>  Latitude:</strong> <span id="lat"></span>
        </div>
        <div class="col-sm">
          <strong> Longitude: </strong> <span id="long"></span>
        </div>
        <div class="col-sm">
            <strong> Entered By: </strong>  <span id="entered_by_user"></span>
        </div>
        <div class="col-sm">
            <strong> Date Entered:</strong>  <span id="date_entered"></span>
        </div>
        <div class="col-sm">
            <strong> User Ip Address: </strong> <span id="user_ip_address"></span>
        </div>
      </div>
    </div>
  </div>

  <!-- Table -->
  <table id="result_table" class="table table-hover">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">Party</th>
        <th scope="col">Score</th>
        <th scope="col">Entered by</th>
        <th scope="col">Ip Address</th>
        <th scope="col">Date</th>

      </tr>
    </thead>
    <tbody>
